  <script>
    // Ajuste a data de retorno aqui (AAAA, M-1, D, H, M, S)
    // Exemplo: 2025-11-27 14:30:00 -> new Date(2025,10,27,14,30,0)
    const target = new Date();
    target.setHours(target.getHours() + 3); // padr√£o: +3 horas a partir do momento atual

    const el = document.getElementById('countdown');
    function pad(n){return String(n).padStart(2,'0')}

    function update(){
      const now = new Date();
      const diff = Math.max(0, Math.floor((target - now)/1000));
      const h = Math.floor(diff/3600);
      const m = Math.floor((diff%3600)/60);
      const s = diff%60;
      el.textContent = `${pad(h)}:${pad(m)}:${pad(s)}`;
      if(diff === 0){
        el.textContent = 'Estamos de volta!';
        clearInterval(interval);
      }
    }
    update();
    const interval = setInterval(update,1000);

    // bot√£o de notifica√ß√£o (apenas demonstra√ß√£o)
    document.getElementById('notificar').addEventListener('click', function(e){
      e.preventDefault();
      const mail = 'suporte@seudominio.com';
      const subject = encodeURIComponent('Quero ser notificado quando o site voltar');
      const body = encodeURIComponent('Ol√°, por favor me notifique quando o site voltar ao ar.');
      window.location.href = `mailto:${mail}?subject=${subject}&body=${body}`;
    });
  </script>
