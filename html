    <script>
        // Premium Particles System
        const canvas = document.getElementById('particlesCanvas');
        const ctx = canvas.getContext('2d');
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const particles = [];
        const particleCount = 150;

        class Particle {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.size = Math.random() * 3 + 1;
                this.speedX = Math.random() * 2 - 1;
                this.speedY = Math.random() * 2 - 1;
                this.opacity = Math.random() * 0.5 + 0.2;
            }

            update() {
                this.x += this.speedX;
                this.y += this.speedY;

                if (this.x > canvas.width) this.x = 0;
                if (this.x < 0) this.x = canvas.width;
                if (this.y > canvas.height) this.y = 0;
                if (this.y < 0) this.y = canvas.height;
            }

            draw() {
                ctx.fillStyle = `rgba(0, 255, 136, ${this.opacity})`;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();

                ctx.shadowBlur = 10;
                ctx.shadowColor = 'rgba(0, 255, 136, 0.5)';
            }
        }

        function initParticles() {
            for (let i = 0; i < particleCount; i++) {
                particles.push(new Particle());
            }
        }

        function connectParticles() {
            for (let i = 0; i < particles.length; i++) {
                for (let j = i + 1; j < particles.length; j++) {
                    const dx = particles[i].x - particles[j].x;
                    const dy = particles[i].y - particles[j].y;
                    const distance = Math.sqrt(dx * dx + dy * dy);

                    if (distance < 120) {
                        ctx.strokeStyle = `rgba(0, 255, 136, ${0.2 - distance / 600})`;
                        ctx.lineWidth = 1;
                        ctx.beginPath();
                        ctx.moveTo(particles[i].x, particles[i].y);
                        ctx.lineTo(particles[j].x, particles[j].y);
                        ctx.stroke();
                    }
                }
            }
        }

        function animateParticles() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            particles.forEach(particle => {
                particle.update();
                particle.draw();
            });

            connectParticles();
            requestAnimationFrame(animateParticles);
        }

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        initParticles();
        animateParticles();

        // Loading Screen
        window.addEventListener('load', () => {
            setTimeout(() => {
                document.getElementById('loadingScreen').classList.add('hidden');
            }, 2000);
        });

        // User Data Storage
        let currentUser = null;
        let users = {};
        let userLinks = {};
        const ADMIN_IP = '201.182.196.250';
        let proModalShown = false;

        // Check if user is admin
        function checkAdmin() {
            // Para ativar o painel admin, detecte o IP do usu√°rio (simulado aqui)
            // Em produ√ß√£o, isso seria feito no backend
            const userIP = '201.182.196.250'; // Simule seu IP aqui para testar
            if (userIP === ADMIN_IP) {
                document.getElementById('adminBtn').style.display = 'block';
                updateAdminStats();
            }
        }

        // Login Handler
        function handleLogin() {
            const name = document.getElementById('loginName').value.trim();
            const whatsapp = document.getElementById('loginWhatsapp').value.trim();
            const password = document.getElementById('loginPassword').value.trim();

            if (!name || !whatsapp || !password) {
                showNotification('‚ö†Ô∏è Por favor, preencha todos os campos!', 'error');
                return;
            }

            if (whatsapp.length < 10) {
                showNotification('‚ö†Ô∏è WhatsApp inv√°lido!', 'error');
                return;
            }

            const userId = whatsapp;
            if (!users[userId]) {
                users[userId] = {
                    name: name,
                    whatsapp: whatsapp,
                    password: password,
                    ranking: 'bronze',
                    views: 0,
                    profilePic: 'https://via.placeholder.com/150',
                    isPro: false,
                    customTitle: null,
                    createdAt: new Date().toISOString()
                };
                showNotification('‚úÖ Conta criada com sucesso!', 'success');
            } else {
                if (users[userId].password !== password) {
                    showNotification('‚ùå Senha incorreta!', 'error');
                    return;
                }
                showNotification('‚úÖ Bem-vindo de volta!', 'success');
            }

            currentUser = userId;
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('mainApp').classList.remove('hidden');
            
            updateProfile();
            updateStats();
            checkAdmin();
            
            // Show PRO modal after 15 seconds
            setTimeout(() => {
                if (!users[currentUser].isPro && !proModalShown) {
                    showProModal();
                    proModalShown = true;
                }
            }, 15000);

            // Random PRO modal every 5 minutes
            setInterval(() => {
                if (!users[currentUser].isPro && Math.random() > 0.6) {
                    showProModal();
                }
            }, 300000);
        }

        // Update Profile Display
        function updateProfile() {
            const user = users[currentUser];
            document.getElementById('profileName').value = user.name;
            document.getElementById('profileWhatsapp').value = user.whatsapp;
            document.getElementById('profileRanking').value = user.customTitle || getRankingName(user.ranking);
            document.getElementById('profilePic').src = user.profilePic;
            
            const rankingBadge = document.getElementById('userRanking');
            rankingBadge.className = 'ranking-badge ' + user.ranking;
            rankingBadge.textContent = user.customTitle || getRankingName(user.ranking);
        }

        // Update Stats
        function updateStats() {
            const user = users[currentUser];
            const links = userLinks[currentUser] || [];
            
            document.getElementById('totalViews').textContent = user.views.toLocaleString();
            document.getElementById('totalLinks').textContent = links.length;
            document.getElementById('rankingPosition').textContent = calculatePosition() + '¬∫';
        }

        // Calculate Position
        function calculatePosition() {
            const allUsers = Object.values(users);
            allUsers.sort((a, b) => b.views - a.views);
            const position = allUsers.findIndex(u => u.whatsapp === currentUser) + 1;
            return position;
        }

        // Profile Picture Update
        function updateProfilePic() {
            const file = document.getElementById('profilePicInput').files[0];
            if (file) {
                if (file.size > 5000000) {
                    showNotification('‚ö†Ô∏è Imagem muito grande! M√°ximo 5MB', 'error');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    users[currentUser].profilePic = e.target.result;
                    document.getElementById('profilePic').src = e.target.result;
                    showNotification('‚úÖ Foto atualizada com sucesso!', 'success');
                };
                reader.readAsDataURL(file);
            }
        }

        // Shorten Link
        function shortenLink() {
            const url = document.getElementById('urlInput').value.trim();
            
            if (!url) {
                showNotification('‚ö†Ô∏è Por favor, insira um link v√°lido!', 'error');
                return;
            }

            if (!url.startsWith('http://') && !url.startsWith('https://')) {
                showNotification('‚ö†Ô∏è O link deve come√ßar com http:// ou https://', 'error');
                return;
            }

            // Prevent malicious self-shortening
            const currentDomain = window.location.hostname;
            if (url.includes('riquelmeencurta') || url.includes(currentDomain)) {
                showNotification('üö´ N√£o √© permitido encurtar links do pr√≥prio sistema!', 'error');
                return;
            }

            const shortCode = generateShortCode();
            const shortUrl = `${window.location.origin}/${shortCode}`;
            
            if (!userLinks[currentUser]) {
                userLinks[currentUser] = [];
            }
            
            userLinks[currentUser].push({
                original: url,
                short: shortUrl,
                code: shortCode,
                views: 0,
                created: new Date().toISOString()
            });

            document.getElementById('shortLink').textContent = shortUrl;
            document.getElementById('resultArea').classList.remove('hidden');
            document.getElementById('urlInput').value = '';
            
            updateLinksList();
            updateStats();
            showNotification('‚úÖ Link encurtado com sucesso!', 'success');
        }

        // Generate Short Code
        function generateShortCode() {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
            let code = '';
            for (let i = 0; i < 6; i++) {
                code += chars.charAt(Math.floor(Math.random() * chars.length));
            }
            // Check if code already exists
            const allLinks = Object.values(userLinks).flat();
            if (allLinks.some(link => link.code === code)) {
                return generateShortCode();
            }
            return code;
        }

        // Copy Link
        function copyLink() {
            const link = document.getElementById('shortLink').textContent;
            navigator.clipboard.writeText(link).then(() => {
                showNotification('‚úÖ Link copiado com sucesso!', 'success');
            }).catch(() => {
                showNotification('‚ùå Erro ao copiar link', 'error');
            });
        }

        // Update Links List
        function updateLinksList() {
            const container = document.getElementById('linksList');
            const links = userLinks[currentUser] || [];
            
            if (links.length === 0) {
                container.innerHTML = '<p style="text-align: center; color: rgba(255, 255, 255, 0.5); font-size: 1.2em; padding: 40px 0;">Voc√™ ainda n√£o tem links encurtados. üîó<br><small style="font-size: 0.8em;">Comece agora mesmo!</small></p>';
                return;
            }
            
            container.innerHTML = links.reverse().map((link, index) => `
                <div class="link-item" style="animation: slideIn 0.5s ease ${index * 0.1}s both;">
                    <strong style="color: #00ff88;">Link Encurtado:</strong> <span style="color: #00d4ff;">${link.short}</span><br>
                    <strong style="color: #00ff88;">Original:</strong> <span style="word-break: break-all;">${link.original}</span>
                    <div class="link-stats">
                        <span>üëÅÔ∏è <strong>${link.views.toLocaleString()}</strong> visualiza√ß√µes</span>
                        <span>üìÖ ${new Date(link.created).toLocaleDateString('pt-BR')}</span>
                    </div>
                    <button class="copy-btn" style="margin-top: 10px; width: 100%;" onclick="copySpecificLink('${link.short}')">üìã Copiar Este Link</button>
                </div>
            `).join('');
        }

        // Copy Specific Link
        function copySpecificLink(link) {
            navigator.clipboard.writeText(link).then(() => {
                showNotification('‚úÖ Link copiado!', 'success');
            });
        }

        // Get Ranking Name
        function getRankingName(ranking) {
            const names = {
                bronze: 'Bronze',
                platina: 'Platina',
                ouro: 'Ouro',
                diamante: 'Diamante',
                desafiante: 'Desafiante',
                lider: 'L√≠der Dos Links',
                netherite: 'Netherite'
            };
            return names[ranking] || 'Bronze';
        }

        // Calculate Ranking
        function calculateRanking(views) {
            if (views >= 20000) return 'netherite';
            if (views >= 10000) return 'lider';
            if (views >= 5000) return 'desafiante';
            if (views >= 1000) return 'diamante';
            if (views >= 500) return 'ouro';
            if (views >= 250) return 'platina';
            return 'bronze';
        }

        // Auto Update Ranking
        function autoUpdateRanking() {
            const user = users[currentUser];
            const newRanking = calculateRanking(user.views);
            if (newRanking !== user.ranking) {
                user.ranking = newRanking;
                updateProfile();
                showNotification(`üéâ Parab√©ns! Voc√™ subiu para ${getRankingName(newRanking)}!`, 'success');
            }
        }

        // Show Section
        function showSection(section) {
            document.querySelectorAll('.section').forEach(s => s.classList.add('hidden'));
            document.getElementById(section).classList.remove('hidden');
            
            document.querySelectorAll('.menu-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            if (section === 'links') {
                updateLinksList();
            }
            if (section === 'admin') {
                updateAdminStats();
                populateAdminUserList();
            }
        }

        // Show PRO Modal
        function showProModal() {
            const modal = document.createElement('div');
            modal.innerHTML = `
                <div class="overlay" onclick="this.parentElement.remove()"></div>
                <div class="pro-modal">
                    <h2 style="text-align: center; background: linear-gradient(135deg, #00ff88 0%, #00d4ff 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">üöÄ RIQUELME ENCURTA PRO</h2>
                    <div class="pro-price">R$ 5,40<span style="font-size: 0.4em; opacity: 0.7;">/m√™s</span></div>
                    <ul class="pro-features">
                        <li>Sem an√∫ncios irritantes</li>
                        <li>Suporte priorit√°rio em at√© 8 horas</li>
                        <li>Estat√≠sticas avan√ßadas e gr√°ficos</li>
                        <li>Links personalizados customizados</li>
                        <li>Acesso a recursos exclusivos VIP</li>
                        <li>Badge PRO no seu perfil</li>
                        <li>Limite aumentado de links</li>
                    </ul>
                    <button class="btn" onclick="buyPro()">üí≥ Comprar PRO Agora</button>
                    <button class="btn btn-secondary" style="margin-top: 15px;" onclick="this.closest('div').parentElement.remove()">Talvez Mais Tarde</button>
                </div>
            `;
            document.body.appendChild(modal);
        }

        // Buy PRO
        function buyPro() {
            const user = users[currentUser];
            const message = `Ol√°! Sou *${user.name}* e gostaria de adquirir o *Riquelme Encurta PRO* üíé

üì± WhatsApp: ${user.whatsapp}
üìä Ranking Atual: ${getRankingName(user.ranking)}
üëÅÔ∏è Total de Views: ${user.views}

Aguardo retorno para realizar o pagamento!`;
            
            const whatsappUrl = `https://wa.me/5574999620423?text=${encodeURIComponent(message)}`;
            window.open(whatsappUrl, '_blank');
            showNotification('üì± Redirecionando para WhatsApp...', 'success');
        }

        // Admin: Update Admin Stats
        function updateAdminStats() {
            const totalUsers = Object.keys(users).length;
            const totalLinks = Object.values(userLinks).reduce((acc, links) => acc + links.length, 0);
            const totalViews = Object.values(users).reduce((acc, user) => acc + user.views, 0);

            document.getElementById('adminTotalUsers').textContent = totalUsers;
            document.getElementById('adminTotalLinks').textContent = totalLinks;
            document.getElementById('adminTotalViews').textContent = totalViews.toLocaleString();
        }

        // Admin: Populate User List
        function populateAdminUserList() {
            const select = document.getElementById('adminUserSelect');
            select.innerHTML = '<option>Selecione um usu√°rio</option>';
            
            Object.values(users).forEach(user => {
                const option = document.createElement('option');
                option.value = user.whatsapp;
                option.textContent = `${user.name} - ${getRankingName(user.ranking)} (${user.views} views)`;
                select.appendChild(option);
            });
        }

        // Admin: Update User Ranking
        function updateUserRanking() {
            const selectedUser = document.getElementById('adminUserSelect').value;
            const newRanking = document.getElementById('adminRankingSelect').value;
            const customTitle = document.getElementById('adminCustomTitle').value.trim();

            if (selectedUser === 'Selecione um usu√°rio') {
                showNotification('‚ö†Ô∏è Selecione um usu√°rio primeiro!', 'error');
                return;
            }

            users[selectedUser].ranking = newRanking;
            if (customTitle) {
                users[selectedUser].customTitle = customTitle;
            } else {
                users[selectedUser].customTitle = null;
            }

            showNotification(`‚úÖ Ranking de ${users[selectedUser].name} atualizado para ${customTitle || getRankingName(newRanking)}!`, 'success');
            updateAdminStats();
            populateAdminUserList();

            if (selectedUser === currentUser) {
                updateProfile();
            }
        }

        // Show Notification
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 20px 30px;
                background: ${type === 'success' ? 'linear-gradient(135deg, #00ff88 0%, #00d4ff 100%)' : 'linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%)'};
                color: ${type === 'success' ? '#0a0a0a' : '#fff'};
                border-radius: 15px;
                font-weight: 600;
                z-index: 10000;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
                animation: slideInRight 0.5s ease;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.style.animation = 'slideOutRight 0.5s ease';
                setTimeout(() => notification.remove(), 500);
            }, 3000);
        }

        // Logout
        function logout() {
            if (confirm('üö™ Deseja realmente sair da sua conta?')) {
                currentUser = null;
                proModalShown = false;
                document.getElementById('mainApp').classList.add('hidden');
                document.getElementById('loginScreen').classList.remove('hidden');
                document.getElementById('loginName').value = '';
                document.getElementById('loginWhatsapp').value = '';
                document.getElementById('loginPassword').value = '';
                showNotification('üëã At√© logo!', 'success');
            }
        }

        // Add CSS animations
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from {
                    opacity: 0;
                    transform: translateX(-30px);
                }
                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }

            @keyframes slideInRight {
                from {
                    opacity: 0;
                    transform: translateX(100px);
                }
                to {
                    opacity: 1;
                    transform: translateX(0);
                }
            }

            @keyframes slideOutRight {
                from {
                    opacity: 1;
                    transform: translateX(0);
                }
                to {
                    opacity: 0;
                    transform: translateX(100px);
                }
            }
        `;
        document.head.appendChild(style);
    </script>
